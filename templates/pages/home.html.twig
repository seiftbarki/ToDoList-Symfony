{% extends "base.html.twig" %}
{% block body%}
<!--======================================
        START HERO AREA
======================================-->
<section class="hero-area pt-30px bg-white shadow-sm">
    <div class="container">
        <div class="hero-content text-center pb-5">
            <h2 class="section-title pb-3 theme-font-2 fs-40">To Do List</h2>
            <p class="section-desc">Soyez maître de votre quotidien avec notre todo list simple et efficace. <br>
            Organisez vos tâches en un clin d'œil,restez concentré et atteignez vos objectifs sans tracas.
             Simplifiez votre vie dès maintenant.
            </p>
            <div class="hero-btn-box py-4">
               
                <a href="{{ url("create_categorie")}}" class="btn theme-btn theme-btn-outline">ajoutez une categorie</a>
            </div>
        </div><!-- end hero-content -->
    </div><!-- end container -->
</section>
<!--======================================
        END HERO AREA
======================================-->
<!-- ================================
         START QUESTION AREA
================================= -->
<section class="question-area pt-80px pb-30px">
    <div class="container">
        <div class="row">
            {% for message in app.flashes("messages") %}
            <div class="alert alert-success" style="width:100%">{{ message }}</div>
            {% endfor %}
            <div class="col-lg-12 px-0">
                <div class="question-main-bar border-left border-left-gray pb-50px">
                    <div class="filters pb-4 pl-3 d-flex align-items-center justify-content-between">

                    
                        <div class="mr-3">
                            <h3 class="fs-18 fw-medium">Toutes les categories </h3>
                            <p class="pt-1 fs-14 fw-medium lh-20"> {{ categories | length }} categories</p>
                        </div>
                       
                    </div><!-- end filters -->
                    <div class="questions-snippet border-top border-top-gray">
                        {% for categorie in categories  %}
                        <div class="media media-card rounded-0 shadow-none mb-0 bg-transparent p-3 border-bottom border-bottom-gray">
                            <div class="votes text-center votes-2">
                                <div class="answer-block answered my-2">
                                    <span class="answer-counts d-block lh-20 fw-medium">{{ categorie.tasks | length}}</span>
                                    <span class="answer-text d-block fs-13 lh-18">tache(s)</span>
                                </div>
                            </div>
                            <div class="media-body">
                                <h5 class="mb-2 fw-medium"><a href="{{url("show_categorie",{"slug":categorie.namecategorie ,"id":categorie.id})}}">
                                {{categorie.namecategorie}}</a></h5>
                                <div class="media media-card user-media align-items-center px-0 border-bottom-0 pb-0">
                                    <a href="" class="media-img d-block">
                                        <img src="assets/images/avatar.jpg" alt="avatar">
                                    </a>
                                    <div class="media-body d-flex flex-wrap align-items-center justify-content-between">
                                        <div>
                                            <h5 class="pb-1"><a href="">{{categorie.namecategorie}}</a></h5>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div><!-- end media -->
                        {% endfor %}
                        
                       
                    </div><!-- end questions-snippet -->
                    <div class="pager d-flex flex-wrap align-items-center justify-content-between pt-30px px-3">
                        <div>
                            <nav aria-label="Page navigation example">
                                <ul class="pagination generic-pagination pr-1">
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Previous">
                                            <span aria-hidden="true"><i class="la la-arrow-left"></i></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" aria-label="Next">
                                            <span aria-hidden="true"><i class="la la-arrow-right"></i></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div><!-- end question-main-bar -->
            </div><!-- end col-lg-7 -->

        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end question-area -->
<!-- ================================
         END QUESTION AREA
================================= -->
{% endblock %}